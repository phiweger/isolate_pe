params {
    qc = false
}

profiles {
    // engines
    docker {
        docker { enabled = true }
        includeConfig 'configs/container.config'
    }

    nanozoo {
        docker { enabled = true }
        google { 
            lifeSciences.preemptible = false
            lifeSciences.bootDiskSize = 20.GB

            // Region is set in the Tower compute environment
            // region = 'europe-west2'
            zone = 'europe-west2-a,europe-west2-b,europe-west2-c'
        }
        
        includeConfig 'configs/nodes.config'
        includeConfig 'configs/containers.config'

        process.errorStrategy = { task.exitStatus in [10,14,143,137,104,134,139] ? 'retry' : 'terminate' }
        process.maxRetries = 3    
    }

    // Cloud private profiles
    gcloudMartinPrivate { 
        //workDir = params.workdir
        params.cloudProcess = true
        docker { enabled = true }
        process.executor = 'google-lifesciences'
        params.databases = 'gs://databases-matrice/isolate-pe'
        bucketDir = 'gs://matrice/isolate-pe'
        google {  
            project = 'nextflow-auto-255816'
            zone = 'europe-west1-b'
            lifeSciences.preemptible = true
            lifeSciences.bootDiskSize = 20.GB
            }
        //includeConfig 'configs/node.config'
        //includeConfig 'configs/container.config'

        // cloud error strategy
        process.errorStrategy = { task.exitStatus in [10,14,143,137,104,134,139] ? 'retry' : 'terminate' }
        process.maxRetries = 3        
    }
}